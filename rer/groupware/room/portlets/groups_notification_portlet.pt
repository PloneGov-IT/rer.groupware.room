<dl class="portlet portletProjects"
    i18n:domain="rer.groupware.room">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
		<span i18n:translate="portlet_room_title">
			Notification management
		</span>
        <span class="portletTopRight"></span>
    </dt>
    
    <dd class="portletItem">
    	<tal:groups define="groups view/listUserGroups">
			<div tal:condition="groups">
				<dl class="groupNotificationList"
					tal:repeat="group groups">
					<dt tal:content="group/title">
					</dt>
					<dd>
						<a href="" tal:attributes="href string:${here/absolute_url}?addToGroup=${group/room_id}.notifyBig">
							<img tal:condition="python:group.get('notification_big')"
								 tal:attributes="src string:${here/portal_url}/++resource++rer.groupware.room.images/group_true.png"/>
							<img tal:condition="python:not group.get('notification_big')"
								 tal:attributes="src string:${here/portal_url}/++resource++rer.groupware.room.images/group_false.png"/>
							<span i18n:translate="portlet_room_label_big">Big notifications</span>
						</a>
					</dd>
					<dd>
						<a href="" tal:attributes="href string:${here/absolute_url}?addToGroup=${group/room_id}.notifySmall">
							<img tal:condition="python:group.get('notification_small')"
								 tal:attributes="src string:${here/portal_url}/++resource++rer.groupware.room.images/group_true.png"/>
							<img tal:condition="python:not group.get('notification_small')"
								 tal:attributes="src string:${here/portal_url}/++resource++rer.groupware.room.images/group_false.png"/>
							<span i18n:translate="portlet_room_label_small">Small notifications</span>
						</a>
					</dd>
				</dl>
			</div>
		</tal:groups>
    </dd>
    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
	
</dl>
